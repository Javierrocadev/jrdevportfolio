      <div
        class="group relative rounded-2xl bg-[#ffffff90] p-0.5 shadow-[0px_2px_5px_#e1e1e1] transition-all duration-200 hover:shadow-md"
      >
        <div
          class="relative aspect-video overflow-hidden rounded-xl p-4 shadow-[0px_0px_4px_#d3d3d3]"
        >
          <!-- Fondo 1 (visible por defecto) -->
          <div class="absolute inset-0 bg-white"></div>

          <!-- Fondo 2 (aparece con hover) -->
          <div
            class="absolute inset-0 opacity-100 transition-opacity duration-300 futuristic-pattern group-hover:opacity-100"
          >
            <svg class="texture-filter">
              <filter id="advanced-texture">
                <feTurbulence
                  type="fractalNoise"
                  baseFrequency="0.7"
                  numOctaves="3"
                  result="noise"></feTurbulence>
                <feSpecularLighting
                  in="noise"
                  surfaceScale="20"
                  specularConstant=".8"
                  specularExponent="20"
                  lighting-color="#fff"
                  result="specular"
                >
                  <fePointLight x="150" y="350" z="100"></fePointLight>
                </feSpecularLighting>
                <feComposite
                  in="specular"
                  in2="SourceGraphic"
                  operator="in"
                  result="litNoise"></feComposite>
                <feBlend in="SourceGraphic" in2="litNoise" mode="overlay"
                ></feBlend>
              </filter>
            </svg>
          </div>

          <!-- Contenido siempre visible -->
         <div class="relative h-full group z-10  group-hover:text-white duration-1000">
  <!-- Fondo redondeado con blur -->
