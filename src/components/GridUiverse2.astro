<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  document.addEventListener("DOMContentLoaded", () => {
    // Registrar ScrollTrigger
    gsap.registerPlugin(ScrollTrigger);
    
    // Solo aplicar animaciones scroll en móvil
    if (window.innerWidth < 768) {
      const animatedCard = document.querySelector('.mobile-animated-card');
      
      if (animatedCard) {
        // Animación que replica el efecto hover pero con scroll
        gsap.fromTo(animatedCard, 
          {
            rotate: -12, // Estado inicial (igual que -rotate-12)
            scale: 0.5   // Estado inicial (igual que scale-50)
          },
          {
            rotate: 0,   // Estado final (igual que hover:rotate-0)
            scale: 0.6,    // Estado final (igual que sm:scale-100)
            duration: 0.8,
            ease: "back.out(1.7)",
            scrollTrigger: {
              trigger: animatedCard,
              start: "top 80%",
              end: "bottom 20%",
              toggleActions: "play none none reverse"
            }
          }
        );
        
        // También animar los SVGs internos para replicar el scale del hover
        const svgs = animatedCard.querySelectorAll('svg');
        gsap.fromTo(svgs, 
          {
            scale: 1
          },
          {
            scale: 1.25, // Similar a group-hover:scale-125
            duration: 0.6,
            ease: "power2.out",
            scrollTrigger: {
              trigger: animatedCard,
              start: "top 80%",
              end: "bottom 20%",
              toggleActions: "play none none reverse"
            }
          }
        );
      }
    }
  });
</script>

<style>
  /* Solo deshabilitar hover en móvil para evitar conflictos */
  @media (max-width: 767px) {
    .mobile-animated-card:hover {
      transform: rotate(-12deg) scale(0.5) !important;
    }
    
    .mobile-animated-card:hover svg {
      transform: scale(0.6) !important;
    }
  }
</style>